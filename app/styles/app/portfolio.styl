@import "nib";

$bg-color = #56bc94;
$text-color = #444;
$text-active-color = $bg-color;
$text-size = 14px;
$header-height = 60px;
$gutter = 20px;

body {
  font-family: "Helvetica Neue", arial, sans-serif;

  color: $text-color;
}

a:hover {
  text-decoration: none;
}


.header {
  z-index: 100;

  padding: 10px 0;
  height: $header-height;
  background: #fff;
  box-shadow: 0 0 4px rgba(0, 0, 0, 0.4);
  opacity: 0.95;

  .logo {
    margin: 0;

    a {
      color: $text-color;
    }

    img {
      width: 40px;
      height: @width;
      vertical-align: top;
    }
    span {
      vertical-align: top;
    }
  }

  .nav {
    a {
      color: $text-color;
      font-size: $text-size;
      font-weight: 500;
      text-transform: uppercase;
    }

    .active a, a:hover{
      background: none;
      color: $text-active-color;
    }
  }
}

.page {
  padding-bottom: 80px;

  h2 {
    margin: 80px 0 40px;
    text-transform: uppercase;
  }

  h2, h3 {
    text-align: center;
  }
}

.page-bg {
  background: $bg-color url("/images/portfolio/bg-pattern.png") repeat top left;
  color: #fff;
}

.page-bg-plain {
  box-shadow: inset 0 0 4px rgba(0,0,0,0.4);
  background: #f5f5f5 url("/images/portfolio/bg-pattern.png") repeat top left;
}

#home {
  padding-top: 60px;
  height: 800px;

  transition: all 1.5s ease-in-out;

  &.typed {
    height: 380px;
  }

  h2, h3{
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
  }

  h3 {
    font-size: 25px;
    font-weight: 400;
  }

  .header-animate {
    animation: fadeIn 1s;
    font-size: 60px;
    text-transform: none;
  }

  .sub-header {
    opacity: 0;
    transition: all 3s ease-in-out;

    &.in {
      opacity: 1;
    }
  }
}

@keyframes fadeIn {
  0% { opacity: 0; }
  100% { opacity: 1; }
}

#about {
  figure {
    margin: 0 auto 40px;
    width: 156px;
    height: @width;

    border-radius: 50%;
    border: 4px solid $bg-color;
  }

  .img-circle {
    margin: 4px 0 0 4px;
    width: 140px;
    height: @width;
  }

  .about-text p {
    margin: 0 200px 10px;
  }

  .about-contact {
    margin: $gutter * 2 0;
    text-align: center;

    ul {
      display: inline-block;
    }

    li {
      margin-right: $gutter;

      &:last-child {
        margin-right: 0;
      }
    }

    a {
      padding: 11px 0 0;
      width: 48px;
      height: @width;

      background-color: $bg-color;
      border-radius: 50%;
      text-align: center;
      transition: all .4s ease-in-out;

      &:hover {
        background-color: darken($bg-color, 25%);
      }
    }

    i {
      color: #fff;
      font-size: 26px;
    }

  }
}

.btn-green {
  color: #fff;
  background-color: $bg-color;
  text-shadow: none;
  transition: all 0.4s ease-in-out;

  &:hover {
    background-color: darken($bg-color, 15%);
    color: #fff;
  }
}

/*typed.js */
#typed-cursor {
  padding-left: 5px;
  opacity: 1;
  font-weight: 500;
  animation: blink 0.7s infinite;
}

@keyframes blink {
  0% { opacity:1; }
  50% { opacity:0; }
  100% { opacity:1; }
}

/*mixitup*/
.mixitup {
  .portfolio-control {
    width: 100%;
    margin-bottom: 40px;

    text-align: center;

    > li {
      display: inline-block;
    }
  }

  .btn {
    margin-right: $gutter;
    min-width: 80px;

    background-color: #fff;
    border: 2px solid $bg-color;
    color: $bg-color;
    cursor: pointer;
    font-weight: 500;
    transition: all 0.4s ease-in-out;

    &:focus {
     outline: none;
    }

    &.active,
    &:hover {
      color: #fff;
      background-color: $bg-color;
    }
  }

  .portfolio-grid {
    font-size: 0;
  }

  .mix {
    position: relative;

    display: none;
    margin: 0 18px 18px 0;
  }

  img {
    box-shadow: 0 1px 6px rgba(0, 0, 0, 0.2);
    border-radius: 5px;
    border: 1px solid #ddd;
  }

  .cover {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;

    padding: $gutter $gutter 0;

    background-color: $bg-color;
    border-radius: 5px;
    color: #fff;
    font-size: 14px;
    opacity: 0;
    transition: all 0.5s;
    text-align: center;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);

    &:hover {
      opacity: 0.9;
    }
  }
}

/*pfold*/
.uc-container {
  position: relative;
  top: 0;
  left: 0;
}
.uc-overlay,
.uc-flipoverlay {
  position: absolute;
  top: 0px;
  left: 0px;

  width: 100%;
  height: 100%;
  opacity: 0;

  background-color: rgba(0,0,0,0.11);
  backface-visibility: hidden;
}
.uc-inner {
  position: absolute;
  left: 0;
  top: 0;

  width: 100%;
  height: 100%;
  overflow: hidden;
}
.uc-single,
.uc-final-wrapper,
.uc-initial-content,
.uc-back,
.uc-front {
  background: #f3f3f3;
}
.uc-final,
.uc-initial,
.uc-final-wrapper {
  position: absolute;
  top: 0;
  left: 0;

  width: 100%;
  height: 100%;
}
.uc-initial-content,
.uc-final-content {
  position: relative;

  width: 100%;
  height: 100%;
}
.uc-final,
.uc-final-content {
  display: none;
}
.uc-initial-content {
  backface-visibility: hidden;
}
.uc-part {
  position: absolute;
  top: 0;
  left: 0;

  transform-style: preserve-3d;
}
.uc-part > div {
  position: absolute;

  display: block;
  width: 100%;
  height: 100%;

  backface-visibility: hidden;
}
.uc-part .uc-back {
  transform: rotateY(-180deg);
}
.uc-unfold-left {
  transform-origin: 0 50%;
  img {
    display: none;
  }
}
.uc-unfold-right {
  background:#fff;
  transform-origin: 100% 50%;

  img {
    display: none;
  }
}
.uc-unfold-top {
  transform-origin: 50% 0%;
}
.uc-unfold-bottom {
  transform-origin: 50% 100%;
}
.uc-unfold-left.uc-unfold {
  transform: rotateY(-180deg);
}
.uc-unfold-right.uc-unfold {
  transform: rotateY(180deg);
}
.uc-unfold-top.uc-unfold {
  transform: rotateX(180deg);
}
.uc-unfold-bottom.uc-unfold{
  transform: rotateX(-180deg);
}
.uc-inner-rotate {
  transform: rotateY(180deg) rotateX(180deg);
}
.uc-container.uc-current {
  z-index: 10;
}
.final-left,
.final-right {
  float: left;
  width: 490px;
  height: 490px;
}
.final-left {
  padding: 30px;

  box-shadow: 0 0 6px rgba(0, 0, 0, 0.1), inset 0 0 30px rgba(0, 0, 0, 0.1), inset -25px 0 30px rgba(0,0,0,0.08);
  font-size: 16px;
  line-height: 24px;
  text-shadow: 0 1px #fff;
}
.final-right{
  background: #fff;
  box-shadow: 2px 0px 15px rgba(0, 0, 0, 0.1), inset 30px 0 40px rgba(0, 0, 0, 0.1), inset 1px 0 1px rgba(0,0,0,0.1);
}
.final-right img{
  border: 0;
  margin: 180px 0 0 180px;
}

.pfold {
  clearfix();
  position: relative;
  margin: 0 auto;
  width: 980px;

  .uc-container {
    float: left;
    width: 245px;
    height: @width;

    cursor: pointer;
    user-select: none;
  }
  .uc-initial-content{
    background: #fff;
    box-shadow: 0 0 4px rgba(0, 0, 0, 0.2), inset 0 0 10px rgba(0, 0, 0, 0.1);

    &:hover {
      box-shadow: 0 0 4px rgba(0, 0, 0, 0.2), inset 0 0 18px rgba(0, 0, 0, 0.15);
    }

    img {
      margin: 50px 0 0 50px;
    }
  }
  .close {
    z-index: 11;
    position: absolute;
    right: 0px;
    top: 0px;

    display: block;
    width: 80px;
    height: 80px;

    background: url(/images/portfolio/icon_close.png) no-repeat 30px 22px;
    cursor: pointer;
    opacity: 0.6;

    &:hover {
      opacity: 1;
    }
  }
}
